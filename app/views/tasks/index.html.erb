<p id="notice"><%= notice %></p>

<h3><%= t('tasks.index.title')%></h3>

<table class='table table-hover'>
  <thead class="table-primary">
    <tr>
      <th><%= t('activerecord.attributes.task.assignament_date')%></th>
      <th><%= t('activerecord.attributes.task.finish_date')%></th>
      <th><%= t('activerecord.attributes.task.description')%></th>
      <th><%= t('activerecord.attributes.task.state')%></th>
      <th><%= t('activerecord.attributes.task.person_id')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.assignament_date %></td>
        <td><%= task.finish_date %></td>
        <td><%= task.description %></td>
        <td><%= task.estado %></td>
        <td><%= task.person.full_name %></td>
        <td><%= link_to t('g.show'), task, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to t('g.edit'), edit_task_path(task), class: 'btn btn-sm btn-secondary' %></td>
        <td><%= link_to t('g.destroy'), task, method: :delete, data: { confirm: t('g.are_you_sure') }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('g.new_task'), new_task_path, class:'btn btn-sm btn-success' %>
